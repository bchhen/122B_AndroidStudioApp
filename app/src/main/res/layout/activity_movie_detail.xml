<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MDmovieOverview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MovieDetailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="264dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:src="@color/common_google_signin_btn_text_light_focused"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BackToSearchButton"
        android:layout_width="374dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Back to Search "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="72dp" />

    <TextView
        android:id="@+id/MDmovieTitle"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:hint="MovieTitle"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:text="Overview"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="379dp"
        android:layout_height="224dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="379dp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:text="Director"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:hint="Director"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/MDrating"
        android:layout_width="44dp"
        android:layout_height="20dp"
        android:hint="rating"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/MDvotes"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:hint="votes"
        android:textAlignment="viewEnd"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="206dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/btn_star"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:text="Year"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="179dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="65dp"
        android:layout_height="18dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="179dp" />
</android.support.constraint.ConstraintLayout>